{
  "$schema": "https://github.com/noClaps/znak/raw/refs/heads/main/theme-schema.json",
  "backgroundColor": "#222",
  "color": "#ccc",
  "highlights": {
    "attribute": { "color": "#83d288" },
    "boolean": { "color": "#ff732e" },
    "comment": { "color": "#666" },
    "constant": { "color": "#99c7ff" },
    "constructor": { "color": "#ff9f5b" },
